@model ASMC5.Models.NguoiDung

@{
    ViewData["Title"] = "Cập nhật thông tin";
    Layout = "_WebLayout";
}
<section class="vh-100 gradient-custom">
  <div class="py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-2 p-md-3">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Cập nhật thông tin cá nhân</h3>
            <form asp-action="CapNhatThongTinKH" method="post" enctype="multipart/form-data">
                <div class="col-12">@Html.Raw(TempData["alert"])</div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Email" type="hidden" class="form-control" />

              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                      <label asp-for="PhoneNo" class="control-label"></label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
                  </div>

                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <label asp-for="BirthDay" class="control-label"></label>
                <input asp-for="BirthDay" class="form-control" />
                <span asp-validation-for="BirthDay" class="text-danger"></span>
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                     <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control"
                    asp-items="@Html.GetEnumSelectList<Gender>()">
                    <option value="">Chọn giới tính</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                      <label asp-for="PhoneNo" class="control-label"></label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                      <label asp-for="Role" class="control-label"></label>
                <select asp-for="Gender" class="form-control"
                    asp-items="@Html.GetEnumSelectList<Role>()">
                    <option value="">Chọn chức vụ</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
                  </div>

                </div>
              </div>

               <div class="row">
                <div class="col-md-12 mb-4">

                  <div class="form-outline">
                     <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
                  </div>

                </div>
                
              </div>

              <div class="pt-2">
                <input class="btn btn-primary btn-lg" type="submit" value="Cập nhật" />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
