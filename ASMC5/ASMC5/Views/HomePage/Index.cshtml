@model IEnumerable<ASMC5.Models.MonAn>

@{
    Layout = "_WebLayout";
    ViewData["Title"] = "Trang chủ";
}
@section css
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/ShowSanPham.css" />
    <!-- Additional CSS Files -->
    <link rel="stylesheet" type="text/css" href="~assets/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~assets/css/font-awesome.css">

    <link rel="stylesheet" href="~assets/css/templatemo-hexashop.css">

    <link rel="stylesheet" href="~assets/css/owl-carousel.css">

    <link rel="stylesheet" href="~assets/css/lightbox.css">
}
<div class="col-12">@Html.Raw(TempData["alert"])</div>
<div class="row">
    <h1 class="text-center col-12" style="color:#096743;font-family: 'Oswald', sans-serif;">Tất cả món ăn</h1>
    @{
        foreach (var item in Model)
        {
            <div class="col-3 mt-3">
                <div class="card bg-white" style="height:390px">
                    <div class="card-body">
                        <div>
                            <img class="img_product" src="~/Images/@item.Image" />
                        </div>
                    </div>
                    <div clas="card-footer">
                        <div class="ml-3">
                            <h4 class="name_product">@item.Name</h4>
                            <p class="price_product">@item.Price VNĐ</p>
                            <a asp-controller="Cart" asp-action="Buy" asp-route-id="@item.Id_MonAn">
                                <i class="bi bi-basket"></i> Đặt hàng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
<!-- Bootstrap -->
<script src="~assets/js/popper.js"></script>
<script src="~assets/js/bootstrap.min.js"></script>
<!-- jQuery -->
<script src="~assets/js/jquery-2.1.0.min.js"></script>