@model ASMC5.Models.DonHang
@{
    Layout = "_WebLayout";
    ViewData["Title"] = "Chỉnh sửa đơn hàng";
}
<h4>DonHang</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_DonHang" />
            <input type="hidden" asp-for="Id_KhachHang"/>
            <div class="row">
                <div class="form-group col-6" >
                <label asp-for="NgayDat" class="control-label"></label>
                <input asp-for="NgayDat" class="form-control" />
                <span asp-validation-for="NgayDat" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="ThanhTienChuaThue" class="control-label"></label>
                <input asp-for="ThanhTienChuaThue" class="form-control" />
                <span asp-validation-for="ThanhTienChuaThue" class="text-danger"></span>
            </div>
            </div>
            
           

            <div class="row">
                 <div class="form-group col-6">
                <label asp-for="ThanhTienCoThue" class="control-label"></label>
                <input asp-for="ThanhTienCoThue" class="form-control" />
                <span asp-validation-for="ThanhTienCoThue" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="TrangThai" class="control-label"></label>
                <select asp-for="TrangThai" class="form-control"
                    asp-items="@Html.GetEnumSelectList<TrangThai>()">
                    <option value="">Trạng thái đơn hàng</option>
                 </select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="GhiChu" class="control-label"></label>
                <input asp-for="GhiChu" class="form-control"/>
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group col-12">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
