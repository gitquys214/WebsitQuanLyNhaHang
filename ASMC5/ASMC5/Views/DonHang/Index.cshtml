@model IEnumerable<ASMC5.Models.DonHang>
@{
    Layout = "_WebLayout";
    ViewData["Title"] = "Đơn hàng";
}
@section css{
    <link rel="stylesheet" href="~/css/HistoryStyle.css"/>
}
<div class="container mt-5">
        <div class="d-flex justify-content-center row">
            <div class="col-md-10">
                <div class="rounded">
                    <div class="table-responsive table-borderless">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Trạng Thái</th>
                                    <th>TT chưa thế</th>
                                    <th>TT có thuế</th>
                                    <th>Ngày mua</th>
                                    <th>Ghi chú</th>
                                    <th>Khách hàng</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody class="table-body">
                            @{
                                foreach(var item in Model)
                                {
                                    <tr class="cell-1">
                                    <td>@item.Id_DonHang</td>
                                    <td><span class="badge badge-success">@item.TrangThai</span></td>
                                    <td>@item.ThanhTienChuaThue.ToString("0,000") VNĐ</td>
                                    <td>@item.ThanhTienCoThue.ToString("0,000") VNĐ</td>
                                    <td>@item.NgayDat.ToString("dd/MM/yyyy")</td>
                                    <td>@item.GhiChu</td>
                                    <td>@item.KhachHang.Name</td>
                                    <td>  
                                        <a asp-action="Edit" asp-route-id="@item.Id_DonHang"><i class="bi bi-pencil-fill"></i></a> |
                                        <a asp-action="Details" asp-route-id="@item.Id_DonHang"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                                    </td>
                                    
                                </tr>
                                }
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
