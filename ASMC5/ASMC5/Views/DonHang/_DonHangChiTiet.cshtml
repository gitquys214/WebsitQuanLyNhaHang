@model IEnumerable<ASMC5.Models.DonHangChiTiet>
@{
    Layout = "_Layout";

}
@{
    var ls = ViewBag.dhct;
}
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VAT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThanhTienChuaThue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThanhTienCoThue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GhiChu)
            </th>
            <th>
                Tên món
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in ls) {
        <tr>
            <td><img src="~/Images/@item.MonAn.Image" width=75 height=75/></td>
            <td>
                @item.SoLuong

            </td>
            <td>
                @item.DonGia
            </td>
            <td>
                @item.VAT
            </td>
            <td>
                @item.ThanhTienChuaThue
            </td>
            <td>
                @item.ThanhTienCoThue
            </td>
            <td>
                @item.GhiChu
            </td>
            <td>
                @item.MonAn.Name
            </td>
        </tr>
}
    </tbody>
</table>
